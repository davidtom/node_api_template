{
    "extends": "standard",
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "no-debugger": [
            "off"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "space-before-function-paren": [
            "off"
        ],
        "space-before-blocks": [
            "warn"
        ]
    }
}