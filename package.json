{
  "name": "node_api_template",
  "version": "1.0.0",
  "description": "Boilerplate setup for a Node API running Express and MongoDB",
  "main": "index.js",
  "scripts": {
    "start": "npm test && npm run dev-server",
    "test": "npm run test-unit",
    "test-unit": "NODE_ENV=test mocha --exit './src/tests/**/*.spec.js'",
    "dev-server": "NODE_ENV=development nodemon ./src/ --exec './node_modules/.bin/eslint ./src/ && node --inspect'"
  },
  "author": "David Tomczyk",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-logging": "^1.1.1",
    "jsonwebtoken": "^8.1.0",
    "logops": "^2.1.0",
    "mongoose": "^4.13.4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "co-mocha": "^1.2.1",
    "colors": "^1.1.2",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1"
  }
}
